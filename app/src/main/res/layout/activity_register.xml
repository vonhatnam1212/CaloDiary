<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back to Login"
                    android:src="@drawable/back_arrow" />
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:contentDescription="User Avatar"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/add_avatar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_text"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_text"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/toggle_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="Toggle password visibility" />
            </RelativeLayout>
            <TextView
                android:id="@+id/password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/cfpassword_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_text"
                    android:hint="Confirm your password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/toggle_confirm_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="Toggle confirm password visibility" />
            </RelativeLayout>
            <TextView
                android:id="@+id/confirm_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Full name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fullname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_text"
                android:hint="Enter your full name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/fullname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_text"
                android:hint="Enter your username"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/username_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/dob_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_text"
                    android:hint="Enter date (dd/mm/yyyy)"
                    android:inputType="number"
                    android:padding="20dp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/dob_picker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/dob"
                    android:contentDescription="Select date" />
            </RelativeLayout>
            <TextView
                android:id="@+id/dob_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_indifference"
                    android:paddingEnd="16dp"
                    android:text="Male"
                    android:textSize="15sp" />
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_indifference"
                    android:paddingEnd="16dp"
                    android:text="Female"
                    android:textSize="15sp" />
            </RadioGroup>
            <TextView
                android:id="@+id/gender_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Height"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/height_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_text"
                android:hint="Enter your current height cm"
                android:inputType="numberDecimal"
                android:padding="20dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/height_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_indifference_bold"
                android:padding="5dp"
                android:text="Weight"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/weight_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corner_text"
                android:hint="Enter your current weight kg"
                android:inputType="numberDecimal"
                android:padding="20dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/weight_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/glacial_indifference"
                android:visibility="gone" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner_btn_login"
                android:fontFamily="@font/glacial_indifference"
                android:padding="5dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>